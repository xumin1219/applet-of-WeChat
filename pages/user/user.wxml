<!--pages/user/user.wxml-->
<view class="page">
 <view class='m1'>
<view class="userinfo">
    <button class='userinfo-button' wx:if="{{hasUserInfo}}"  bindtap="getUserInfo">登录/注册</button>
    <block wx:else>
      <image class="userinfo-avatar" src="https://mp.weixin.qq.com/debug/wxadoc/dev/image/cat/1.png?t=2018315" background-size="cover"></image>
      <text class="userinfo-nickname">1111</text>
    </block>
  </view>
 </view>
 <view class="page__bd">
  <view class="weui-cells weui-cells_after-title">
   <navigator url="../userinfo/userinfo" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
     <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">个人中心</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
   </navigator>
   <navigator url="../payment/payment" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
     <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">零钱</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
   </navigator>
   <!-- <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
