/**index.wxss**/

@keyframes kf-marque-animation {
 0% {
  transform: translateX(0);
 }

 100% {
  transform: translateX(-33.3%);
 }
}

.marquee {
 width: 100%;
 height: 60rpx;
 line-height: 60rpx;
 background: #fff;
 border: none;
 display: block;
 margin: 0 auto;
 overflow: hidden;
 white-space: nowrap;
 text-overflow: clip;
 position: relative;
 font-size: 32rpx;
 color: #666;
}

.marquee .content {
 display: inline-block;
 position: relative;
 padding-right: 0px;
 animation: kf-marque-animation 11.3s linear infinite;
 white-space: nowrap;
}

.marqueeimg {
 background-color: #fff;
 padding-right: 10rpx;
 position: absolute;
 top: 10rpx;
 left: 0rpx;
 z-index: 99;
}

.sbox {
 margin: 0;
 padding: 0;
 width: 750rpx;
}

#issue {
 width: 94%;
 margin: 10rpx auto;
 letter-spacing: 10rpx;
 background-color: #1e29ff;
 color: #fff;
 height: 100rpx;
 line-height: 100rpx;
}

.page__bd {
 height: 100%;
}

.page__bd {
 padding-bottom: 0;
}

.weui-tab__content {
 text-align: center;
}

.sibox {
 width: 720rpx;
 height: 280rpx;
 margin: 20rpx auto;
 background-color: #fff;
 border: 1px #eee solid;
 border-radius: 15rpx;
 position: relative;
}

.sibox .sibt1 {
 position: absolute;
 left: 50rpx;
 top: 20rpx;
 color: #666;
}

.sibox .sibt2 {
 position: absolute;
 left: 200rpx;
 top: 20rpx;
 color: #666;
}

.sibox .sibt2 image {
 display: inline-block;
}

.sibox .sibt3 {
 position: absolute;
 left: 50rpx;
 top: 100rpx;
 color: #666;
}

.sibox .sibt4 {
 position: absolute;
 top: 30rpx;
 right: 20rpx;
 display: block;
 color: #fff;
 background-color: #f29900;
 border-radius: 15rpx;
 width: 150rpx;
 padding: 10rpx;
}

.sibox .sibt4 text {
 display: block;
 background-color: #fff;
 border-radius: 15rpx;
 color: #333;
}

.sibox .sibtn {
 position: absolute;
 width: 100%;
 bottom: 0;
 left: 0;
 padding: 0;
 border-top: 1px #eee solid;
 overflow: hidden;
 height: 80rpx
}

.sibox .sibtn .weui-btn {
 margin: 0 auto;
 width: 50%;
 height: 80rpx
}

button[type="default"] {
 color: #000;
 background-color: transparent;
}

.sibox .sibtn .weui-btn::after {
 border: none;
}

.sibox .sibtn .btn1 {
 color: #666;
 background-color: #ffffff;
}

.sibox .sibtn .btn2 {
 color: #333;
}

.user-btn {
 position: fixed;
 right: 5%;
 top: 85%;
 width: 80rpx;
 height: 80rpx;
 text-align: center;
 background-color: #fff;
 overflow: hidden;
 border-radius: 100%;
 padding: 0;
}

.user-btn:after {
 border: none;
}

.user_img {
 border-radius: 100%;
 margin: 0 auto;
}
